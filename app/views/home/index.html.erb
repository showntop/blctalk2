<%= raw Setting.index_html %>

<div class="row home_headline_topics">
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="content-block">
        <div class="title">头条</div>
        <!-- Place somewhere in the <body> of your page -->
        <div id="slider" class="flexslider">
          <ul class="slides">
            <% Topic.headline.each do |t| %>
              <li >
                <%= link_to(main_app.topic_path(t), title: t.title) do %>
                  <img src="<%= t.cover %>" width="750" height="350" style=" height: 300px; overflow: hidden;"/>
                  <%= t.title %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
    <div class="content-block">
      <div class="title">推荐阅读</div>
      <div class="recommend-topic">
        <% Topic.recommend.first(5).each do |t| %>
          <div class="row recommend-topic-item">
            <%= link_to(main_app.topic_path(t), title: t.title, class: "col-xs-2 col-sm-2 col-md-2 col-lg-2") do %>
              <img src="<%= t.cover %>" width="100" height="60" style=" height: 60px; overflow: hidden;"/>
            <% end %>
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 recommend-topic-info">
              <%= link_to(main_app.topic_path(t), title: t.title) do %>
                <%= t.title %>
              <% end %>
              <p>2018年7月11日 13:53</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row home_excellent_topics item-list">
      <% Node.all.each do |nd| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="content-block node-block">
            <div class="title"><%= nd.name %></div>
            <div class="recommend-topic">
              <% Topic.where(node_id: nd.id).first(8).each do |t| %>
                <div class="row recommend-topic-item">
                  <%= link_to(main_app.topic_path(t), title: t.title, class: 'col-xs-2 col-sm-2 col-md-2 col-lg-2') do %>
                    <img src="<%= t.cover %>" width="80" height="60" style=" height: 60px; overflow: hidden;"/>
                  <% end %>
                  <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 recommend-topic-info">
                    <%= link_to(main_app.topic_path(t), title: t.title) do %>
                      <%= t.title %>
                    <% end %>
                    <p>2018年7月11日 13:53</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      <% end %>
</div>

<% if !mobile? %>
  <%= render "/shared/index_sections" %>
  <%= render "/shared/hot_locations" %>
<% end %>
